generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== AUTH ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(EDITOR)
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

enum Role {
  ADMIN
  EDITOR
  CONTRIBUTOR
}

// ==================== EDITORIAL CONTENT ====================

model Article {
  id          String        @id @default(cuid())
  title       String
  slug        String        @unique
  excerpt     String?
  content     String        @db.Text
  coverImage  String?
  status      ArticleStatus @default(DRAFT)
  featured    Boolean       @default(false)
  author      String?
  league      League?
  publishedAt DateTime?
  tags        Tag[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([status])
  @@index([publishedAt])
  @@index([league])
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  articles Article[]
}

model UploadedImage {
  id        String   @id @default(cuid())
  url       String
  filename  String
  createdAt DateTime @default(now())
}

// ==================== MEDIA POLLS ====================

model PollWeek {
  id          String      @id @default(cuid())
  weekNumber  Int
  season      String
  league      League      @default(MCLA)
  division    String?
  notes       String?     @db.Text
  status      PollStatus  @default(DRAFT)
  publishedAt DateTime?
  entries     PollEntry[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([weekNumber, season, league, division])
  @@index([status])
  @@index([league])
}

enum PollStatus {
  DRAFT
  PUBLISHED
}

model PollEntry {
  id           String   @id @default(cuid())
  pollWeekId   String
  pollWeek     PollWeek @relation(fields: [pollWeekId], references: [id], onDelete: Cascade)
  teamId       String
  team         Team     @relation(fields: [teamId], references: [id])
  rank         Int
  previousRank Int?
  points       Int?
  note         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([pollWeekId, teamId])
  @@unique([pollWeekId, rank])
}

// ==================== TRANSFERS ====================

model Transfer {
  id         String   @id @default(cuid())
  playerName String
  fromTeamId String?
  fromTeam   Team?    @relation("TransferFrom", fields: [fromTeamId], references: [id])
  toTeamId   String?
  toTeam     Team?    @relation("TransferTo", fields: [toTeamId], references: [id])
  league     League   @default(MCLA)
  position   String?
  classYear  String?
  notes      String?  @db.Text
  confirmed  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([confirmed])
  @@index([league])
}

// ==================== MCLA DATA (Future-Ready) ====================

model Team {
  id              String      @id @default(cuid())
  mclaTeamId      String?     @unique
  name            String
  shortName       String?
  league          League      @default(MCLA)
  conference      String?
  division        Division?
  logoUrl         String?
  officialUrl     String?
  active          Boolean     @default(true)
  syncedFromMcla  Boolean     @default(false)
  pollEntries     PollEntry[]
  transfersFrom   Transfer[]  @relation("TransferFrom")
  transfersTo     Transfer[]  @relation("TransferTo")
  homeGames       Game[]      @relation("HomeTeam")
  awayGames       Game[]      @relation("AwayTeam")
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([conference])
  @@index([active])
  @@index([league])
}

enum Division {
  D1
  D2
}

enum GameStatus {
  SCHEDULED
  IN_PROGRESS
  FINAL
  POSTPONED
  CANCELLED
}

enum League {
  MCLA
  SMLL
  NCLL
  WCLL
  OTHER
}

model Game {
  id          String     @id @default(cuid())
  mclaGameId  String?    @unique
  homeTeamId  String
  homeTeam    Team       @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeamId  String
  awayTeam    Team       @relation("AwayTeam", fields: [awayTeamId], references: [id])
  date        DateTime
  homeScore   Int?
  awayScore   Int?
  status      GameStatus @default(SCHEDULED)
  venue       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([date])
  @@index([status])
}

// ==================== CONTENT MANAGEMENT ====================

model Page {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  content   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdUnit {
  id          String   @id @default(cuid())
  name        String
  adType      AdType
  code        String   @db.Text
  enabled     Boolean  @default(true)
  placement   String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum AdType {
  DISPLAY
  LEADERBOARD
  SIDEBAR
  POPUP
  INLINE
}

// ==================== LEAGUE CONFIGURATION ====================

model LeagueConfig {
  id          String              @id @default(cuid())
  name        String
  code        String              @unique
  active      Boolean             @default(true)
  conferences Conference[]
  divisions   LeagueDivision[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
}

model Conference {
  id             String            @id @default(cuid())
  name           String
  code           String?
  leagueConfigId String
  leagueConfig   LeagueConfig      @relation(fields: [leagueConfigId], references: [id], onDelete: Cascade)
  regions        ConferenceRegion[]
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@index([leagueConfigId])
}

model LeagueDivision {
  id             String       @id @default(cuid())
  name           String
  code           String
  displayOrder   Int          @default(0)
  leagueConfigId String
  leagueConfig   LeagueConfig @relation(fields: [leagueConfigId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([leagueConfigId])
}

model ConferenceRegion {
  id           String     @id @default(cuid())
  name         String
  code         String?
  conferenceId String
  conference   Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([conferenceId])
}
